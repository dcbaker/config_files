[core]
	editor = vim
	pager = tig

[alias]
	cm = commit -v
	cma = commit -av
	a = add
	amend = commit --amend
	br = branch
	ck = checkout
	new = checkout -b
	rb = rebase
	llog = log --pretty=medium
	cached = diff --cached
	pr = pull --rebase
	mr = merge --ff-only
	as = rebase --interactive --autosquash
	f = fetch
	send = send-email --annotate --find-renames --find-copies
	send-cherry = "!git send HEAD~`git cherry master | wc -l`"
	chp = cherry-pick

[color]
	ui = false
	interactive = true
	branch = true
	showbranch = true
	status = true

[format]
	pretty = oneline

[user]
	; set stuff

[sendemail]
	; set more stuff

[push]
	default = upstream

[sendmail]
	confirm = always

; vim: filetype=gitconfig noexpandtab
